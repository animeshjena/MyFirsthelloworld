<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name :"
        android:id="@+id/name1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/name1"
        android:layout_alignBaseline="@+id/name1"
        android:id="@+id/name"
        android:text="name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email :"
      android:layout_alignParentLeft="true"
        android:id="@+id/email1"
        android:layout_below="@+id/name"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/email1"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/name1"
        android:id="@+id/email"
        android:layout_alignBaseline="@+id/email1"
        android:text="email"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="loginname :"

        android:layout_below="@+id/email"
        android:id="@+id/login1"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/login1"
        android:layout_below="@+id/email"
        android:layout_alignBaseline="@+id/login1"
        android:text="login"
        android:id="@+id/loginname"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="password :"

        android:layout_below="@+id/loginname"
        android:id="@+id/password1"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_alignBaseline="@+id/password1"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/password1"
        android:layout_below="@+id/loginname"
        android:text="password"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:text="save"
        android:id="@+id/save"/>
    <TextView android:text="content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/content"


        android:layout_below="@+id/save"/>

